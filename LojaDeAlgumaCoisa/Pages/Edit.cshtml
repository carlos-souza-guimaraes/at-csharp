@page
@model LojaDeAlgumaCoisa.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Carro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Carro.Id" />
            <div class="form-group">
                <label asp-for="Carro.Linha" class="control-label"></label>
                <input asp-for="Carro.Linha" class="form-control" />
                <span asp-validation-for="Carro.Linha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Carro.ModeloId" class="control-label"></label>
                <select asp-for="Carro.ModeloId" asp-items="Model.Modelos" class="form-control"></select>
                <span asp-validation-for="Carro.ModeloId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Carro.Ano" class="control-label"></label>
                <input asp-for="Carro.Ano" class="form-control" />
                <span asp-validation-for="Carro.Ano" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Carro.Placa" class="control-label"></label>
                <input asp-for="Carro.Placa" class="form-control" />
                <span asp-validation-for="Carro.Placa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Carro.Preco" class="control-label"></label>
                <input asp-for="Carro.Preco" class="form-control" />
                <span asp-validation-for="Carro.Preco" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Carro.Vendido" /> @Html.DisplayNameFor(model => model.Carro.Vendido)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Carro.Registro" class="control-label"></label>
                <input asp-for="Carro.Registro" class="form-control" />
                <span asp-validation-for="Carro.Registro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Carro.ImageUri" class="control-label"></label>
                <input asp-for="Carro.ImageUri" class="form-control" />
                <span asp-validation-for="Carro.ImageUri" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
